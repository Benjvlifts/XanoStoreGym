<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.app.xanostoregym">

    <!-- Permiso para que la app pueda conectarse a Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="XanoStoreGym"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.XanoStoreGym"
        tools:targetApi="31">

        <!-- Declaramos LoginActivity como la pantalla de inicio de la app -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declaramos la actividad principal que contendrÃ¡ los fragmentos -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="false">
        </activity>
    </application>
</manifest>